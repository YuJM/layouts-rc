{
  "name": "overlay-manager-vue",
  "version": "1.0.0",
  "description": "Declarative overlay manager for Vue 3 with hook-based API - Promise-based modal, dialog, toast, and drawer control with full TypeScript support, multiple stacking, and lifecycle management",
  "author": "Yujm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YuJM/layouts-rc.git",
    "directory": "packages/overlay-vue"
  },
  "homepage": "https://github.com/YuJM/layouts-rc/tree/main/packages/overlay-vue",
  "bugs": {
    "url": "https://github.com/YuJM/layouts-rc/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "overlay",
    "overlay-manager",
    "modal",
    "dialog",
    "toast",
    "drawer",
    "popup",
    "alert",
    "confirm",
    "notification",
    "promise",
    "async",
    "hooks",
    "composable",
    "typescript",
    "radix-vue",
    "reka-ui",
    "headless-ui",
    "headless",
    "stacking",
    "reactivity",
    "lifecycle"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run typecheck && vite build && vue-tsc --declaration --emitDeclarationOnly",
    "typecheck": "vue-tsc --noEmit",
    "npm:publish": "pnpm build && npm publish",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-v8": "^4.0.9",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "eslint": "^8.38.0",
    "eslint-plugin-vue": "^9.11.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^24.1.0",
    "prettier": "^2.8.7",
    "typescript": "~5.0.4",
    "vite": "^4.3.9",
    "vitest": "^4.0.9",
    "vue": "^3.3.4",
    "vue-tsc": "^1.6.5"
  }
}
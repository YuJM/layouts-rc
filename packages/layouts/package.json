		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^20.11.24",
		"@types/react": "^18.2.61",
		"@vercel/style-guide": "^6.0.0",
		"autoprefixer": "^10.4.18",
		"esbuild-sass-plugin": "^3.3.1",
		"postcss": "^8.4.35",
		"sass": "^1.77.8",
		"tsup": "^8.1.0",
		"typescript": "^5.3.3"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	}

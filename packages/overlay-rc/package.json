  "keywords": [
    "react",
    "react18",
    "react19",
    "nextjs",
    "hooks",
    "overlay",
    "overlay-manager",
    "dialog",
    "alert",
    "sheet",
    "drawer",
    "modal",
    "popup",
    "toast",
    "radix-ui",
    "shadcn-ui",
    "headless",
    "headless-ui",
    "typescript",
    "ssr",
    "zero-dependencies",
    "lightweight",
    "promise-based",
    "type-safe",
    "concurrent-safe"
  ],
  "homepage": "https://github.com/YuJM/layouts-rc/tree/main/packages/overlay-rc#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/YuJM/layouts-rc.git",
    "directory": "packages/overlay-rc"
  },
  "bugs": {
    "url": "https://github.com/YuJM/layouts-rc/issues"
  },
  "license": "MIT",
  "author": "Yujm",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --clean",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "npm:publish": "pnpm build && npm publish",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "prettier": "@vercel/style-guide/prettier",
  "dependencies": {},
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",

    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@vercel/style-guide": "^6.0.0",
    "@vitest/ui": "^4.0.8",
    "happy-dom": "^20.0.10",
    "jsdom": "^24.1.0",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.8"
